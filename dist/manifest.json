{
  "name": "Inlightning",
  "version": "0.0.0",
  "description": "Salesforce Extension",
  "icons": {
    "16": "/media/icons/icon16.png",
    "48": "/media/icons/icon48.png",
    "128": "/media/icons/icon128.png"
  },
  "permissions": ["tabs", "storage"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://osisoft.lightning.force.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
